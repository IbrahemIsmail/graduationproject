<%- include("partials/header.ejs")%>
  <section class="bg-gradient-light padding">
    <div class="center max-width-l">
      <h2>Available Books</h2>
      <p class="paragraph">Browse around and look for university books that you will need throughout the semester.</p>
    </div>
    <div class="row margin-top max-width-l">
      <% posts.forEach(function(post){ %>
        <div class="col-one-fourth card card-content">
          <img  src="data:image/jpg;base64,<%= post.image %>">
          <h5>
            <%=post.title%>
          </h5>
          <p class="muted">
            <%=post.price%>
          </p>
          <p class="desc">
            <%=post.description%>
          </p>
          <a href="shop/id=<%=post.id%>" marign:0 5%  class="btn btn-primary">more info</a>
        </div>
        <% }); %>
    </div>
