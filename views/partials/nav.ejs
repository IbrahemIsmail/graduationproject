<section style="background-color: #f7f7f7;">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light stroke">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="<% path == 'courses' ? '/courses' : '/shop' %>">
                        <img src="/assets/logo/LogoPrimary.png" width="90" height="60" class="d-inline-block align-top"
                            alt="logo">
                    </a>
                    <!-- <a class="navbar-brand" href="/">PassBook</a> -->
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-uppercase">
                        <% if(!currentUser) {%>
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a
                                        class="nav-link text-primary <%= path == 'login' ? 'active' : ''  %> "
                                        href="/login">Login</a>
                                </li>
                                <li class="nav-item"><a
                                        class="nav-link text-primary <%= path == 'signup' ? 'active' : ''  %>"
                                        href="/signup">Sign Up</a></li>
                                <li class="nav-item"> <a
                                        class="nav-link text-primary <%= path == 'posts' ? 'active' : ''  %> "
                                        href="/shop">Shop</a>
                                <li class="nav-item"> <a
                                        class="nav-link text-primary <%= path == 'courses' ? 'active' : ''  %>"
                                        href="/courses">Courses</a>
                            </ul>
                            </li>
                            <% } else{ %>
                                <li class="nav-item "><span class="nav-link text-primary" href="#">Signed in as<strong
                                            class="text-capitalize">
                                            <%= currentUser.username%>
                                        </strong></span></li>
                                <ul class="nav nav-tabs">
                                    <li class="nav-item"> <a class="nav-link text-primary <%= path == 'mybooks' ? 'active' : ''  %>" href="/shop/myposts">My
                                            Books</a>
                                    </li>
                                    <li class="nav-item"> <a
                                            class="nav-link text-primary <%= path == 'posts' ? 'active' : ''  %> "
                                            href="/shop">Shop</a>
                                    <li class="nav-item"> <a
                                            class="nav-link text-primary <%= path == 'courses' ? 'active' : ''  %>"
                                            href="/courses">Courses</a>
                                </ul>
                                <li class="nav-item"><a class="nav-link text-primary" href="/logout">Log Out</a></li>
                                <% } %>
                    </ul>
                    <% if (path=='posts' ) { %>
                        <form class="d-flex" action="/shop/searchData" method="post">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search a Book"
                                aria-label="Search">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </form>
                        <% } else if(path=='courses' ) {%>
                            <form class="d-flex" action="/courses/searchData" method="post">
                                <input class="form-control me-2" type="search" name="search"
                                    placeholder="Search a Course" aria-label="Search">
                                <button class="btn btn-primary text-white" type="submit">Search</button>
                            </form>
                            <% } %>
                </div>
            </div>
        </nav>
    </div>
</section>