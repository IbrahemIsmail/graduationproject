<body class="page page-onboarding preload">
	<main>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container fluid nav-item">
				<div class="navbar-header">
					<img src="" width="30" height="30" class="d-inline-block align-top" alt="">
					<a class="navbar-brand" href="/">PassBook</a>
				</div>
				<div class="nav navbar-nav navbar-center">
					<form class="d-flex" action="/shop/searchData" method="post">
						<input class="form-control mr-sm-2 nav-item" type="search" placeholder="Search"
							aria-label="Search" name="search">
							<button class="btn btn-outline-success my-2 my-sm-0 nav-item" type="submit">Search</button>
					</form>
				</div>
				<div class="">
					<ul class="nav navbar-nav navbar-right">
						<% if(!currentUser) {%>
							<li class="nav-item me-3"><a class="nav-link" href="/login">Login</a></li>
							<li class="nav-item me-3"><a class="nav-link" href="/signup">Sign Up</a></li>
							<% } else{ %>
								<li class="nav-item me-3"><a class="nav-link" href="#">Signed in as:<strong>
											<%= currentUser.username%>
										</strong></a></li>
								<li class="nav-item me-3"> <a class="nav-link" href="/shop/myposts">My Books</a></li>
								<li class="nav-item"><a class="nav-link" href="/logout">Log Out</a></li>
								<% } %>
					</ul>
				</div>
			</div>
		</nav>
		<% if(message && message.length>0) {%>
			<div style="text-align: center" class="alert alert-danger">
				<%=message%>
					<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
			<% }%>