<%- include("../partials/header.ejs")%>
    <section class="container">
        <div class="row d-flex">
            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item active" aria-current="true">An active item</li>
                    <li class="list-group-item">A second item</li>
                    <li class="list-group-item">A third item</li>
                    <li class="list-group-item">A fourth item</li>
                    <li class="list-group-item">And a fifth one</li>
                </ul>
            </div>
            <div class="border-primary mb-3 row col-md-8 g-0 bg-light position-relative">
                <div class="col-md-6 mb-md-0 p-md-4">
                    <img src="data:image/jpg;base64,<%= post.image %>" class="flex-shrink-0 me-3" alt="...">
                </div>
                <div class="col-md-6 p-4 ps-md-0">
                    <h5 class="mt-0">
                        <%=post.title%>
                    </h5>
                    <p>
                        <%=post.description%>
                    </p>
                    <div class="d-inline">
                        <a class="" href="#" class="stretched-link">Go somewhere</a>
                        <p class="d-inline d-flex text-muted justify-content-end">
                            <%=post.price%> TL
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container-fluid ">
            <div class="d-flex flex-row justify-content-around flex-wrap">
                <% if(similarPosts && similarPosts !=null) {%>
                    <% similarPosts.forEach(function(post){ %>
                        <div class="card" style="width: 18rem; margin: 15px 30px;">
                            <img class="card-img-top" src="data:image/jpg;base64,<%= post.image %>"
                                alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=post.title%>
                                </h5>
                                <p class="card-text">
                                    <%=post.description%>
                                </p>
                                <p class="card-text"><small class="text-muted">
                                        <%=post.price%>
                                    </small></p>
                            </div>
                        </div>
                        <% }) %>
            </div>
        </div>
        <% } else{ %>
            <h4>
                No suggestions available
            </h4>
            <%}%>
    </section>
    <%- include("../partials/footer.ejs")%>