<%- include("../partials/header.ejs")%>
  <%- include("../partials/nav.ejs")%>
    <%- include("../partials/flashMessage.ejs")%>

      <section class="container d-flex justify-content-around">
        <div class="col-6 col-md-4 m-5">
          <div class="w-100">
            <p class="paragraph">Please enter information about the book.<br>(The title, price, description, and kindly
              attach an image of the book.)</p>
            <form action="/shop/id=<%= post.id %>?_method=put" method="POST" enctype="multipart/form-data">
              <div class="form-floating mb-3">
                <input class="form-control" id="title" type="text" name="title" placeholder="Title"
                  value="<%=post.title%>">
                <label for="title">Title</label>
              </div>
              <div class="form-floating mb-3">
                <input class="form-control mb-3" id="price" type="text" name="price" placeholder="Price"
                  value="<%=post.price%>">
                <label for="price">Price</label>
              </div>
              <div class="form-floating mb-3">
                <input class="form-control" id="description" type="description" name="description"
                  placeholder="Description" value="<%=post.description%>">
                <label for="description">Description</label>
              </div>
              <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" aria-label="Floating label select example"
                  name="status">
                  <!-- <option selected>Open this select menu</option> -->
                  <% if(post.status == 0){%>
                    <option value="0">Available</option>
                    <option value="1">Sold</option>
                    <% } else {%>
                      <option value="1">Sold</option>
                      <option value="0">Available</option>
                      <% } %>
                </select>
                <label for="floatingSelect">Post Status</label>
              </div>
              <div class="input-group mb-3">
                <input id="image" class="form-control btn border-primary" type="file" name="file" placeholder="Image">
                <label class="input-group-text btn-outline-primary" for="image">Image</label>
              </div>
              <div class="d-grid gap-2 col-6 mx-auto">
                <button type="submit" class="btn btn-primary mb-3">Update</button>
              </div>
            </form>
          </div>
        </div>

        <section class="mt-5">
          <div class="row margin-top d-flex justify-content-around">
            <div class="card h-100" style="width: 16rem; margin: -25px 30px;">

              <div class="card-body">
                <h5 class="card-title text-capitalize">
                  <%=post.title%>
                </h5>
                <p class="">
                  <%=post.price%> TL
                </p>
                <p class="card-text text-truncate">
                  <%=post.description%>
                </p>
              </div>
              <img class="card-img-bottom rounded-3" style="margin-bottom: 12px;"
                src="data:image/jpg;base64,<%= post.image %>">
            </div>
          </div>
        </section>
      </section>
      <%- include("../partials/footer.ejs")%>