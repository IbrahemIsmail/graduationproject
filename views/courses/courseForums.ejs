<%- include("../partials/header.ejs")%>
     <%- include("../partials/nav.ejs")%> <!-- might change later to another nav -->
        <%- include("../partials/flashMessage.ejs")%>
            <div class="container">

                <% if(message && message.length>0) {%>
                    <div style="text-align: center" class="alert alert-danger">
                        <%=message%>
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                    </div>
                    <% } %>
            </div>



            <!-- create a parent course -->
            <form class="container" action="/courses/addcourse" method="post">
                <div class="form-group">
                    <label for="courseCode">course Code:</label>
                    <input id="courseCode" type="text" name="courseCode">
                </div>
                <div class="form-group">
                    <label for="name">name:</label>
                    <input id="name" type="text" name="name">
                </div>
                <div class="form-group">
                    <label for="departmentCode">department code:</label>
                    <input id="departmentCode" type="text" name="departmentCode">
                </div>
                <button class="button button-primary full-width">Submit</button>
            </form>

            <hr>

            <!-- //create a teacher -->
            <form class="container" action="/courses/addteacher" method="post">
                <div class="form-group">
                    <label for="name">name:</label>
                    <input id="name" type="text" name="name">
                </div>
                <button class="button button-primary full-width">Submit</button>
            </form>

            <hr>
            <!-- create course instance -->

            <form class="container" action="/courses/addcourseinstance" method="post">
                <div class="form-group">
                    <label for="year">year:</label>
                    <input id="year" type="date" name="year">
                </div>
                <div class="form-group">
                    <label for="teacher">Teacher Name:</label>
                    <input id="teacher" type="text" name="teacher">
                </div>
                <div class="form-group">
                    <label for="course">course ID:</label>
                    <input id="course" type="text" name="course">
                </div>
                <button class="button button-primary full-width">Submit</button>
            </form>
            <%- include("../partials/footer.ejs")%>