<%- include("../partials/header.ejs")%>
    <%- include("../partials/nav.ejs")%> <!-- might change later to another nav -->
        <%- include("../partials/flashMessage.ejs")%>
            <section id=timeline>
                <h1><%=course.name%></h1>
                <p class="leader"><%=course.description%></p>
                <div class="demo-card-wrapper ">
                    <% instances.forEach(function(instance){ %>
                    <div class="demo-card demo-card--step1 bg-secondary">
                        <div class="head">
                            <div class="number-box">
                                <span><%=instance.year.getFullYear()%></span>
                            </div>
                            <h2>
                                <%=instance.name%>
                            </h2>
                        </div>
                    </div>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
</section>



<section style="background-color: #f7f6f6;">
    <div class="container my-5 py-5 text-dark">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <% ratings.forEach(function(rating){ %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex flex-start">
                <img class="rounded-circle shadow-1-strong me-3"
                  src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(26).webp" alt="avatar" width="40"
                  height="40" />
                <div class="w-100">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="text-primary fw-bold mb-0">
                      <%=rating.username%>
                      <span class="text-dark ms-2"><%=rating.Description%></span>
                    </h6>
                    <p class="mb-0">2 days ago</p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <p class="small mb-0" style="color: #aaa;">
                      <a href="#!" class="link-grey">Remove</a> •
                      <a href="#!" class="link-grey">Reply</a> •
                      <a href="#!" class="link-grey">Translate</a>
                    </p>
                    <div class="d-flex flex-row">
                      <i class="fas fa-star text-warning me-2"></i>
                      <i class="far fa-check-circle" style="color: #aaa;"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%});%>
        </div>
      </div>
    </div>
  </section>



<%- include("../partials/footer.ejs")%>
