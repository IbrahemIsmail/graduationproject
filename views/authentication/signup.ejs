<%- include("../partials/header.ejs")%>
  <%- include("../partials/nav.ejs")%>
    <%- include("../partials/flashMessage.ejs")%>

      <div class="container">
        <% if(message=="Missing credentials" ){ %>
          <div style="text-align: center" class="alert alert-danger">
            Empty fields please insert the requested information
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
          <% } else if(message && message.length>0) {%>
            <div style="text-align: center" class="alert alert-danger">
              <%=message%>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            <% }%>
      </div>


      <section class="container m-2">
        <div class="row m-3 p-2 ms-5">
          <div class="col-6 col-md-4 m-5">
            <div class="w-100">
              <h5>Welcome back.</h5>
              <p class="paragraph">Enter your details below.</p>
              <form action="signup" method="POST">
                <div class="form-floating mb-3">
                  <input class="form-control" id="username" type="text" name="username" placeholder="Username">
                  <label for="username">Username</label>
                </div>
                <div class="form-floating">
                  <input class="form-control mb-3" id="email" type="email" name="email" placeholder="Email">
                  <label for="email">Email</label>
                </div>
                <div class="form-floating mb-3">
                  <input class="form-control" id="password" type="password" name="password" placeholder="Password">
                  <label for="password">Password</label>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                  <button type="submit" class="btn btn-primary mb-3">Create account</button>
                </div>
              </form>
            </div>
            <div class="center w-100">
              <span class="muted">Already have an account? </span><a href="/login">Log In</a>
            </div>
          </div>
          <div class="col-6 col-md-4">
            <div class="container-fluid w-100">
              <%- include("../../public/assets/signupSVG.ejs") %>
            </div>
          </div>
        </div>
      </section>

<%- include("../partials/footer")%>