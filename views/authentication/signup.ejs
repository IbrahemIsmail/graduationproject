<%- include("../partials/header.ejs")%>

  <body class="page page-onboarding preload">

    <main>


      <div class="container">
        <% if(message=="Missing credentials" ){ %>
          <div style="text-align: center" class="alert alert-danger">
            Empty fields please insert the requested information
            <button type="button" class="close" data-dismiss="alert">&times;</button>
          </div>
          <% } else if(message && message.length>0) {%>
            <div style="text-align: center" class="alert alert-danger">
              <%=message%>
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
            <% }%>
      </div>

      <div class="container">
        <section class="row no-gutter reverse-order">
          <div class="col-one-half middle padding">
            <div class="max-width-s">
              <h5>Welcome!</h5>
              <p class="paragraph">Enter your details to create an account.</p>
              <form action="signup" method="POST">
                <div class="form-group">
                  <label for="username">Username:</label>
                  <input id="username" type="text" name="username">
                </div>
                <div class="form-group">
                  <label for="email">Email:</label>
                  <input id="email" type="email" name="email">
                </div>
                <div class="form-group">
                  <label for="password">Password:</label>
                  <input id="password" type="password" name="password">
                </div>
                <button class="button button-primary full-width" type="submit" value="signup">Create account</button>
              </form>
            </div>
            <div class="center max-width-s space-top">
              <span class="muted">By creating an account, you agree to our </span><a href="#">Terms</a><span
                class="muted">.</span>
            </div>
            <div class="center max-width-s">
              <span class="muted">Already have an account? </span><a href="/login">Log In</a>
            </div>
          </div>
          <div class="col-one-half bg-image-05 featured-image"></div>
        </section>
      </div>
    </main>
    <%- include("../partials/header.ejs")%>